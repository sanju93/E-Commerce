<link rel = "stylesheet" href="/css/orderPage.css">



<% if (orders.length === 0){ %>

    
    <h1>No orders Yet</h1>


    
<%}else{%>





<% for (var i of orders) {%>

    <% if (i.status) {%>

    <div class = "container1">

    

    <div class = "card1">

     <p class = "child">Order Placed: <%= i.orderPlaced %></p>
     
     <p class="child">Price : <%= i.price %></p>
     <p class="child">SHIP To: <%= i.consumerName %></p>
     <p class="child">Order # <%= i.orderId %></p>
    
    </div>
    <div class = "container2">

    <div class="left">

        <img src="<%= i.image%>">
      


    </div>
    <div class = "right">

        <p><%=i.product_name%></p>
      
        <a href = '/users/products/view/<%= i.productId %>'><button>view your Product</button></a>


        <div id = "track">

            <p>
           <img src = "https://cdn-icons-png.flaticon.com/128/4436/4436481.png">
            Order Initiate</p>
            <p>
            <% if (i.Dispatch) {%>
            <img src = "https://cdn-icons-png.flaticon.com/128/4436/4436481.png">
            <% } %>
              Dispatched</p>
            <p>
                <% if (i.OutforDelivery) {%>
                    <img src = "https://cdn-icons-png.flaticon.com/128/4436/4436481.png">
                <% } %>
                
                Out for Delivery</p>
            <p>
                <% if (i.delivered) {%>
                    <img src = "https://cdn-icons-png.flaticon.com/128/4436/4436481.png">
                <% } %>Delivered</p>

        </div>
      


     

    </div>

    </div>


    </div>

    <%}%>

  


<%}%>


